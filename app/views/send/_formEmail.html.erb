<%flash[:notice] %>
<%=form_tag send_path, method: :post do %>

<div class="form-group text-center header-text position">

	<div class="col-sm-4">
		<%= radio_button_tag(:advise, "Cotizacion") %>
		<i class="fa fa-calculator"></i>
		<%= label_tag(:Presupuesto, "Presupuestos") %>
	</div>

	<div class="col-sm-4">
		<%= radio_button_tag(:advise, "Proyectos") %>
		<i class="fa fa-cogs"></i>
		<%= label_tag(:Proyecto, "Proyecto") %>
	</div>

	<div class="col-sm-4">
		<%= radio_button_tag(:advise, "Otros") %>
		<i class="fa fa-comments-o"></i>
		<%= label_tag(:Otros, "Otros") %>
	</div>
	
</div>


<div class="form-group">
	<%=text_field_tag(:name, nil, placeholder: "Ingrese su Nombre", class: "form-control")%>
</div>

<div class="form-group">
	<%=email_field_tag(:email, nil, placeholder: "Ingrese su Email", class: "form-control")%>
</div>


<div class="form-group">
	<%=text_area_tag(:message, nil, placeholder: "Ingrese su Mensaje", class: "form-control")%>
</div>

<p>
	<%=submit_tag("Enviar", class: "btn btn-info btn-block")%>
</p>
<% end %>