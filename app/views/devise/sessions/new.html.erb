<div id="main-signup">

  <div class="fluid-container">
  <%= image_tag("signup-signout.jpg", class: "img-responsive") %>
  </div>

  <div class="container text-center">

    <h2>Bienvenidos</h2>

      <%= form_for(resource, :html => {:class => "form-horizontal"}, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, placeholder: "Correo Electrónico"%>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
          </div>
        </div>

        <div class="form-group actions">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Iniciar Sesión" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

  </div><!-- End Container -->

</div><!-- End ID=Main-signup -->