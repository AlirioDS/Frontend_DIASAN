<%= form_for(@contact) do |f| %>

  <div class="form-group text-center header-text position">
    <div>

      <% if @contact.errors.messages[:advise] %>  
        <span><%@contact.errors.messages[:advise].first %></span>
        
        <% if @contact.errors.messages[:advise].first == "No Puede Estar en Blanco" %>
        <h5 class="notice">Debe Seleccionar Alguna de las Tres Opciones</h5>
        <%end%>

      <%end%>

      <div class="col-sm-4">
        <%= radio_button_tag("contact[advise]", "Cotizacion") %>
        <i class="fa fa-calculator"></i>
        <%= label_tag(:Presupuesto, "Presupuestos") %>
      </div>

      <div class="col-sm-4">
        <%= radio_button_tag("contact[advise]", "Proyectos") %>
        <i class="fa fa-cogs"></i>
        <%= label_tag(:Proyecto, "Proyecto") %>
      </div>

      <div class="col-sm-4">
        <%= radio_button_tag("contact[advise]", "Otros") %>
        <i class="fa fa-comments-o"></i>
        <%= label_tag(:Otros, "Otros") %>
      </div>
    </div>
  </div>


<div class="form-group">
  <%=text_field_tag(:name, nil, placeholder: "Ingrese su Nombre", class: "form-control", name: "contact[name]")%>
  <% if @contact.errors.messages[:name] %>  
    <span class="notice"><%= @contact.errors.messages[:name].first %></span>
  <%end%>
</div>

<div class="form-group">
  <%=email_field_tag(:email, nil, placeholder: "Ingrese su Email", class: "form-control", name: "contact[email]")%>
  <% if @contact.errors.messages[:email] %>  
    <span class="notice"><%= @contact.errors.messages[:email].first %></span>
  <%end%>
</div>


<div class="form-group">
  <%=text_area_tag(:message, nil, placeholder: "Ingrese su Mensaje", class: "form-control", name: "contact[message]")%>
  <% if @contact.errors.messages[:message] %>  
    <span class="notice"><%= @contact.errors.messages[:message].first %></span>
  <%end%>
</div>

<p>
  <%=submit_tag("Enviar", class: "btn btn-info btn-block")%>
</p>
<% end %>